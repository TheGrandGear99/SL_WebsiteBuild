  let {
    editable = false,
    dangerous = false,
    title = '',
    message = '',
    fields,
    formTarget = '',
    editButtonTitle = null,
    editLink = null,
    saveButtonTitle = 'Save',
    saveButtonClass = '',
    editButtonClass = ''
  }: Props = $props();

  const handleSubmit: SubmitFunction = () => {
    buttonState = 'loading';
    return async ({ result, update }) => {
